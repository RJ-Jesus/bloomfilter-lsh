        #BodyImposter {
                color: #666;
                background: #fdfdff;
                width: 100%;
                margin: 0px;
                padding: 0px;
                text-align: center;
        }
        #BodyImposter li,
        #BodyImposter p,
        #BodyImposter td,#BodyImposter td p {
                font-size: 12px;
                line-height: 1.5em;
                font-family: Verdana, Arial, sans-serif;
                text-align: center;
        }
        #BodyImposter p,
        #BodyImposter ol,
        #BodyImposter ul {
                margin: 0em 0em 1em 0em;
        }
        #BodyImposter img {	border-width: 0px;
}
        #Primary img {
                /*float: right;*/
                margin: 5px 0px 15px 15px;
                border:none;
                padding: 6px;
        }
        #BodyImposter small {
                font-size: 10px;
                line-height: 1.3em;
        }
        #BodyImposter ol {
                padding-left: 1em;
        }
        #Primary ul {
                padding-left: 1em;
                padding-right: 1em;
        }
        #BodyImposter ol li {
                margin: 0px;
                padding: 0px;
        }
        #BodyImposter ul li {
                margin-left: 20px;
        }
        /* links
        --------------------------------------------------*/
        #BodyImposter a {
                text-decoration: underline;
        }
        #Primary a:link,
        #Primary a:visited {
                color: #000;
                background: #fff;
        }
        #Helpful a:link,
        #Helpful a:visited,
        #Legal a:link,
        #Legal a:visited {
                color: #666;
                background: transparent;
        }
        #BodyImposter a:hover {
                text-decoration: none;
        }
        #BodyImposter a:active {
                color: #000;
                background: #fff;
                text-decoration: none;
        }
        /* heads
        --------------------------------------------------*/
        #BodyImposter h1,
        #BodyImposter h2 {
                color: #3e3e3e;
                background: #fff;
                font-family: Verdana, Arial, serif;
                font-weight: normal;
                line-height: normal;
                margin: 0em 0em 0.5em 0em;
                padding: 0px;
                text-align: left;
        }
        #Masthead h1 {
                font-size: 28px;
                color: #000;
                /*background: #333;*/
                margin: 0px;
        }
        #Primary h2 {
                font-size: 1.8em;
                color: #3e3e3e;
                padding-top: 5px;
                text-align: center;
        }
        /* boxes
        --------------------------------------------------*/
        #Box {
                color: #666;
                background: #fdfdff;
                margin: 0px auto;
        }
        #Content {
                /*border: 1px solid #d3d3d3;*/
        }
        #Helpful,
        #Legal {
                margin: 0px auto;
        }
        #Helpful p,
        #Legal p {
                margin: 0px;
                padding: 0px;
                text-align: center;
        }
        #Masthead {
                color: #fff;
                /*background: #333;*/
        }
        #Masthead h1,
        #Masthead p {
                text-align: left;
        }
        #Masthead p {
                font-size: 14px;
                margin: 0px;
        }
        #Masthead p #Date {
                float: right;
        }
